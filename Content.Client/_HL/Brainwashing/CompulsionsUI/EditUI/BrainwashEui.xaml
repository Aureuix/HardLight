<controls:FancyWindow
    MinSize="500 500"
    Title="Compulsions Editor"
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <BoxContainer Orientation="Vertical">
        <ScrollContainer
            ReserveScrollbarSpace="True"
            HScrollEnabled="False"
            HorizontalExpand="True"
            VerticalExpand="True">
            <BoxContainer
                Access="Public"
                Name="CompulsionContainer"
                Orientation="Vertical"
                VerticalExpand="True"/>
        </ScrollContainer>
        <BoxContainer
            Align="End">
            <Button
                MaxSize="256 64"
                Name="NewCompulsionButton"
                StyleClasses="OpenRight"
                Text="New Compulsion"/>
            <Button
                Access="Public"
                MaxSize="256 64"
                Name="SaveButton"
                StyleClasses="OpenLeft"
                Text="Save"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
